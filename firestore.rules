rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/adminUsers/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/adminUsers/$(request.auth.uid)).data.isActive == true;
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Production collections (root level)
    match /categories/{categoryId} {
      allow read: true;
      allow write: if isAdmin();
    }
    
    match /brands/{brandId} {
      allow read: true;
      allow write: if isAdmin();
    }
    
    match /products/{productId} {
      allow read: true;
      allow write: if isAdmin();
    }
    
    match /priceHistory/{historyId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
    
    match /adminUsers/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if false; // Only through admin SDK
    }
    
    match /analytics/{docId} {
      allow read: if isAdmin();
      allow write: true; // Allow anonymous analytics writes
    }
    
    // Environment-specific collections (for dev/staging)
    match /environments/{envId}/{collection}/{docId} {
      // Categories, brands, products - public read, admin write
      allow read: if collection in ['categories', 'brands', 'products'];
      allow write: if isAdmin();
      
      // Price history and admin users - admin only
      allow read, write: if isAdmin() && collection in ['priceHistory', 'adminUsers'];
      
      // Analytics - public write, admin read
      allow read: if isAdmin() && collection == 'analytics';
      allow write: if collection == 'analytics';
    }
  }
}
