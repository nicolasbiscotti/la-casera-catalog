rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---

    // ‚ö°Ô∏è FASTER & FREE: Check for "admin" Custom Claim in the Auth Token
    // No database reads required.
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // üõ°Ô∏è BOT PROTECTION: User must be signed in (Anonymously or Registered)
    function isAuthenticated() {
      return request.auth != null;
    }

    // --- MAIN COLLECTIONS (Production) ---

    match /categories/{categoryId} {
      allow read: if isAuthenticated(); // üîí Prevents open scraping
      allow write: if isAdmin();
    }

    match /brands/{brandId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /products/{productId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /priceHistory/{historyId} {
      allow read, write: if isAdmin();
    }

    // Admin Users Profile
    // Admins can read their own profile; nobody else can read or write it via Client SDK
    match /adminUsers/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if false; // STRICTLY SERVER-SIDE ONLY
    }

    match /analytics/{docId} {
      allow create: if isAuthenticated();
      allow read, update, delete: if isAdmin();
    }

    // --- ENVIRONMENT COLLECTIONS (Dev/Staging) ---
    match /environments/{envId}/{collection}/{docId} {

      // Analytics: Authenticated users can log events (create), but only Admins can manage them
      allow create: if collection == 'analytics' && isAuthenticated();
      allow read, update, delete: if collection == 'analytics' && isAdmin();

      // Catalog: Auth to Read, Admin Claim to Write
      allow read: if collection in ['categories', 'brands', 'products'] && isAuthenticated();
      allow write: if collection in ['categories', 'brands', 'products'] && isAdmin();

      // Sensitive: Admin Claim Only
      allow read, write: if collection in ['priceHistory', 'adminUsers'] && isAdmin();
    }
  }
}
