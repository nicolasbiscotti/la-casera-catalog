rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    function isAuthenticated() {
      return request.auth != null;
    }

    // Checks for 'admin' role in Custom Claims
    function isAdmin() {
      return isAuthenticated() && request.auth.token.role == 'admin';
    }

    // Checks for 'admin' OR 'editor' role
    function isEditor() {
      return isAuthenticated() && 
      (request.auth.token.role == 'admin' || request.auth.token.role == 'editor');
    }

    // --- ROOT COLLECTIONS ---

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isEditor();
    }

    match /brands/{brandId} {
      allow read: if true;
      allow write: if isEditor();
    }

    match /products/{productId} {
      allow read: if true;
      allow write: if isEditor();
    }

    match /priceHistory/{historyId} {
      allow read, write: if isEditor(); // Editors usually need to see/write history
    }

    match /adminUsers/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if false; 
    }

    match /analytics/{docId} {
      allow create: if isAuthenticated();
      allow read, update, delete: if isAdmin();
    }

    // --- ENVIRONMENT COLLECTIONS (Dev/Staging) ---
    match /environments/{envId}/{collection}/{docId} {

      // Analytics
      allow create: if collection == 'analytics' && isAuthenticated();
      allow read, update, delete: if collection == 'analytics' && isAdmin();

      // Catalog: Fixed to allow Editors to write in Dev environments too
      allow read: if collection in ['categories', 'brands', 'products'];
      allow write: if collection in ['categories', 'brands', 'products'] && isEditor(); // âœ… FIXED: Changed from isAdmin to isEditor

      // Sensitive Data
      allow read, write: if collection in ['priceHistory', 'adminUsers'] && isAdmin();
    }
  }
}