# Firebase Configuration
# Get these values from Firebase Console > Project Settings > Your Apps > Web App
VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef

# Environment (development | staging | production)
# - development: uses /environments/development/* collections
# - staging: uses /environments/staging/* collections  
# - production: uses root collections (/, /categories, /products, etc.)
VITE_ENVIRONMENT=development

# Use Firebase Emulators (true | false)
# Set to true for local development
VITE_USE_FIREBASE_EMULATORS=true

# Store Configuration
VITE_STORE_NAME=La Casera (Local)
VITE_STORE_WHATSAPP=5491112345678
