{
  "name": "la-casera-catalog",
  "license": "MIT",
  "author": "Nicol√°s Biscotti <nicolas.biscotti@gmail.com>",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite",
    "dev:emulators": "concurrently -k -n \"EMU,DEV\" -c \"yellow,cyan\" \"pnpm firebase:emulators\" \"wait-on tcp:8080 && pnpm dev\"",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "firebase:emulators": "firebase emulators:start --import=./firebase-data --export-on-exit",
    "firebase:emulators:fresh": "firebase emulators:start",
    "firebase:emulators:export": "firebase emulators:export ./firebase-data",
    "firebase:deploy:rules": "firebase deploy --only firestore:rules,firestore:indexes",
    "firebase:deploy:rules:dry": "firebase deploy --only firestore:rules,firestore:indexes --dry-run",
    "seed:local": "env $(cat .env.local | grep -v '#' | grep -v '^$' | xargs) node scripts/seed-local.mjs",
    "clean": "rm -rf dist node_modules/.vite",
    "clean:all": "rm -rf dist node_modules/.vite firebase-data"
  },
  "dependencies": {
    "firebase": "^12.7.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^22.10.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^9.1.0",
    "eslint": "^9.15.0",
    "firebase-admin": "^13.6.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16",
    "wait-on": "^8.0.1"
  }
}
